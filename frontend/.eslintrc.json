{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "codeceptjs/codeceptjs": true,
        "jest/globals": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "extends": [
        "airbnb",
        "plugin:security/recommended"
    ],
    "plugins": [
        "react",
        "html",
        "security",
        "codeceptjs",
        "jest"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "complexity": ["warn", 20],
        "no-plus-plus": "off",
        "quotes": ["error", "double"],
        "no-underscore-dangle": "off"
    }
}